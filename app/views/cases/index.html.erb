<section class="section section-top section-full">
<div class="bg-overlay bg-dark"></div>
  <div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-left"></div>
  <div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-right"></div>
  <div class="container">
	  	<div style="margin-left: 10%; margin-right: 10%; display: flex; flex-wrap: wrap">
  		<% @cases.each do |c| %>
  			<div class="card bg-white" style="width: 18rem; margin: 4px;">
  	  		<div class="card-body">
  	        <h5 class="card-title"><%= c.title %></h5>
  	        <h6 class="card-subtitle mb-2 text-muted"><%= c.visit_date %></h6>
  	        <p class="card-text"><%= c.city %></p>
			<%= link_to "Voir le dossier", case_path(c.id),class: "card-link"%>
			<% if current_user.administrator? %>
				<%= link_to case_path(c.id), method: :delete, data: { confirm: 'Etes-vous sûr de vouloir supprimer ce dossier ?' } do %>
					Détruire ce dossier
				<% end %>
			<% end %>
  	      </div>
  	    </div>
  	  <% end %>
  	</div>
	</div>
</section>	
