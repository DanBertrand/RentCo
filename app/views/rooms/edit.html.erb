<section class="section section-top section-full">
    <div class="container">
        <%= form_with(url: case_room_path, method: "put") do %>    
            <div class="row justify-content-center align-items-center", style="margin-top: 150px;">
                <div class="col-md-8 col-lg-12">
                    <div class="row">
                        <% @case_rooms.each_with_index do |room, ind| %>
                            <div class="col-md-8 col-lg-4">
                                <div class="field form-group">
                                    <%= label_tag "Chambre numÃ©ro :#{ind}", nil, class: 'white' %><br />
                                    <div class="input-group">
                                        <%= number_field_tag room.rent_monthly, nil, class: 'form-control order-1', required: true %>
