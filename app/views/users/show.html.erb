<section class="section">
  <div class="bg-cover"></div>
  <div class="bg-overlay bg-dark"></div>
  <div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-left"></div>
  <div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-right"></div>
  <div id="user_show">
    <div class="container">
      <div class="row">
        <div class="card" style="background-image: url(<%= asset_path('1.jpg') %>);">
          <div class="card-header text-center">
            <h3 class="card-title">Profil de <%= @user.lastname.titleize %> <%= @user.firstname.titleize %> </h3>
          </div>
          <ul class="list-group list-group-flush">
            <hr>
            <li class="list-group-item">Email : <span class="text-secondary"> <%= @user.email %></span></li>
            <li class="list-group-item">Numéro de téléphone : <span class="text-secondary"> <%= @user.phone_number %></span></li>
            <li class="list-group-item">Vous êtes enregistré en tant que : <span class="text-secondary"> <%= @user.profession %></span></li>
          </ul>
          <div class="card-body text-center">
            <%= link_to 'Modifier le profil', edit_user_registration_path, class:"btn btn-primary btn-lg" %>
          </div>
          <div class="col-md-1">
            <%= link_to 'Retour', cases_path, class:"btn btn-secondary btn-sm" %>
          </div>
          
        </div>
      </div>
    </div>
    <% if current_user.administrator? %>
      <% if @cases.length == 1 %>
        <h3 class="text-center text-white custom"><U>Dossier géré par <%=@user.lastname.titleize%> <%=@user.firstname.titleize%> :</U></h3><br>
      <%else%>
        <h3 class="text-center text-white custom"><U>Dossiers gérés par <%=@user.lastname.titleize%> <%=@user.firstname.titleize%> :</U></h3><br>
      <%end%>
      <div class="cards-usercases-admin" id="index_case">
        <% @cases.each do |c| %>
					<div class="row" >
						<div style="padding-left: 48px;">
							<div class="card " style="width: 18rem; margin: 4px; ">
								<div class="card-body card-top-margin">
								<% if current_user.administrator? %>
									<div class="row">
										<div class=" ml-auto">
											<%= link_to case_path(c.id), method: :delete, data: { confirm: 'Etes_vous sûr de vouloir supprimer ce dossier?' } do %>
												<i class="fas fa-trash" style="color: var(--danger);"></i>
											<% end %>
										</div>
									</div>
								<% end %>
									<div class="row">
										<div class="col-md-6">
											<p class="size"><%= "Modifié: #{sprintf '%02d', c.updated_at.day}/#{sprintf '%02d', c.updated_at.month}/#{c.updated_at.year}" %></p>
										</div>
										<div class="col-md-6">
											<p class="size"><%= "Créé: #{sprintf '%02d', c.created_at.day}/#{sprintf '%02d', c.created_at.month}/#{c.created_at.year}" %></p>
										</div>
									</div>
									<h2 class="card-header card-header-full text-center"><strong><%= c.title.capitalize %></strong></h2>
									<hr>
									<h6 class="card-subtitle mb-2 text-muted" style="margin-top: 10px"><%= "Date de visite : #{sprintf '%02d', c.visit_date.day}/#{sprintf '%02d', c.visit_date.month}/#{c.visit_date.year}" %></h6>
									<hr>
									<p class="card-text text-center"><strong> À <%= c.city.titleize %></strong></p>
									<hr>
									<% if (c.renta_brut.nil?) %>
										<br>
										<%= link_to "Voir", case_path(c.id), class: "btn btn-outline-primary btn-sm "%><br>
									<%else%>
										<%= link_to "Voir", case_path(c.id), class: "btn btn-outline-primary btn-sm "%><br>
									<% end %>
									<br>
									<% if current_user.administrator? || (current_user.user? && c.is_confirmed?) %>
										<% if !(c.renta_brut.nil?) %>
											<%= link_to "pdf", generate_pdf_case_path(c.id), method: :post, class: "btn btn-outline-secondary btn-sm" %>
										<% end %>
									<% end %>
									<hr>
									<% if c.is_confirmed == false %>
										<p class="card-text margin">Dossier <span class="text-info"><u>modifiable</u></span></p>
									<%else%>
										<p class="card-text margin">Dossier <span class="text-success"><u>validé</u></span></p>
									<%end%>
									<hr>
									<% if !(c.renta_brut.nil?) %>
										<div class="row">
											<div style="margin-left: 20px;">
												<p id="muted" class="text-muted">&copy RentCo.</p>
											</div>
											<% if current_user.administrator? %>
											<div style="margin-top: -6px; margin-left: 80px; margin-bottom: -14px">
												<%= link_to "Par #{@users.find(c.user_id).lastname.titleize} #{@users.find(c.user_id).firstname.titleize}", user_path(@users.find(c.user_id)), id:"muted", class: "text-muted" %>
											</div>
											<% end %>
										</div>	
									<%else%>			
										<div class="row">
											<div style="margin-left: 20px;">
												<p id="muted" class="text-muted">&copy RentCo.</p>
											</div>
											<% if current_user.administrator? %>
											<div style="margin-top: -6px; margin-left: 80px;">
												<%= link_to "Par #{@users.find(c.user_id).lastname.titleize} #{@users.find(c.user_id).firstname.titleize}", user_path(@users.find(c.user_id)), id:"muted", class: "text-muted" %>
											</div>
											<% end %>
										</div>
									<%end%>				
								</div>
							</div>
						</div>
					</div>
				<% end %>
      </div>
		<%end%>
  </div>
</section>
             