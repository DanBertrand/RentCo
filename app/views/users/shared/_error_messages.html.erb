<div id="error_messages_edit_user">
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <div class="alert mb-3", style="vertical-align:top;">
      <h4><%= I18n.t("errors.messages.not_saved", count: @user.errors.count, resource: resource.class.model_name.human.downcase) %> <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="truee" class="error">x</span>
        </button></h4>
        <% resource.errors.full_messages.each do |message| %>
          <%if message == "Current password is invalid" %>
            <% message = "Mot de passe actuel invalide"%>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%elsif message == "Password is too short (minimum is 6 characters)"%>
            <% message = "Nouveau mot de passe invalide (6 caractères minimum)"%>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%elsif message == "Password confirmation doesn't match Password"%>
            <% message = "La confirmation de votre nouveau de mot de passe est différente"%>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%elsif message == "Email has already been taken"%>
            <% message = "L'email entrée est déja utilisée"%>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%elsif message == "Phone number is not a valid french number"%>
            <% message = "Le numéro de téléphone est invalide" %>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%elsif message == "Firstname must be between 3 and 64 characters"%>
            <% message = "Le prénom doit être compris entre 3 et 64 caractères" %>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%elsif message == "Lastname must be between 3 and 64 characters"%>
            <% message = "Le nom doit être compris entre 3 et 64 caractères" %>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%else%>
            <h4>
              <span class="text-danger"><%= message %> </span>
            </h4>
          <%end%>
        <%end%>
      </div>
    </div>
  <% end %>
</div>
