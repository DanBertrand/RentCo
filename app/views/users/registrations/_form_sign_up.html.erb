
<section class="section section-full section-top ">
  <div class="bg-overlay bg-dark"></div>
  <div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-left"></div>
  <div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-right"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="main-part-center-home"> 
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-styled bg-white" }) do |f| %>
          <h4 class="text-center mb-4">
            Bienvenue, inscrivez vous
          </h4>
          <p class="text-center text-muted mb-5">
            Remplissez le formulaire ci-dessous pour créer un compte
          </p>
          <br>
          <div class="row">
            <div class="col-md-8 col-lg-6">
              <div class="field from-group">
                <%= f.label :prénom%><br />
                <div class="input-group">
                  <%= f.text_field :firstname, class: "form-control order-1", required: true %>
                  <div class="input-group-append order-0">
                    <div class="input-group-text">
                      <svg class="input-group-icon icon-offset icon icon-person" viewBox="0 0 106 106" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <path transform="translate(3 3)" d="
                          M0 100 A 50 50 0 0 1 50 60 A 20 20 0 0 1 50 0 A 20 20 0 0 1 50 60 A 50 50 0 0 1 100 100">
                        </path>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8 col-lg-6">
              <div class="field from-group">
                <%= f.label :nom%><br />
                <div class="input-group">
                  <%= f.text_field :lastname, class: "form-control order-1", required: true %>
                  <div class="input-group-append order-0">
                    <div class="input-group-text">
                      <svg class="input-group-icon icon-offset icon icon-person" viewBox="0 0 106 106" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <path transform="translate(3 3)" d="
                          M0 100 A 50 50 0 0 1 50 60 A 20 20 0 0 1 50 0 A 20 20 0 0 1 50 60 A 50 50 0 0 1 100 100">
                        </path>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8 col-lg-6">
              <div class="field form-group">
                <%= f.label :email %><br />
                <div class="input-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control order-1", required: true %>
                  <div class="input-group-append order-0">
                    <div class="input-group-text">
                      <svg class="input-group-icon icon-offset icon icon-envelope" viewBox="0 0 106 106" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <path transform="translate(3 3)" d="
                          M0 30 V 10 H 100 V 90 H 0 V 30 L 50 60 L 100 30">
                        </path>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8 col-lg-6">
              <div class="field form-group">
                <%= f.label :Teléphone %><br />
                <div class="input-group">
                  <%= f.text_field :phone_number, class: "form-control order-1", required: true %>
                  <div class="input-group-append order-0">
                    <div class="input-group-text">
                       <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-telephone" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8 col-lg-6">
              <div class="field from-group">
                <%= f.label :mot_de_passe%><br />
                <div class="input-group">
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control order-1", required: true %>
                  <div class="input-group-append order-0">
                    <div class="input-group-text">
                      <svg class="input-group-icon icon-offset icon icon-lock" viewBox="0 0 106 106" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <path transform="translate(3 3)" d="
                          M25 50 V 20 A 25 25 0 0 1 50 0 A 25 25 0 0 1 75 20 V 50 H 90 V 100 H 10 V 50 H 75 M50 85 A 5 5 0 0 1 45 80 V 70 A 5 5 0 0 1 50 65 A 5 5 0 0 1 55 70 V 80 A 5 5 0 0 1 50 85">
                        </path>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8 col-lg-6">
              <div class="field from-group">
                <%= f.label :confirmer%><br />
                <div class="input-group">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control order-1", required: true %>
                  <div class="input-group-append order-0">
                    <div class="input-group-text">
                      <svg class="input-group-icon icon-offset icon icon-lock" viewBox="0 0 106 106" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <path transform="translate(3 3)" d="
                          M25 50 V 20 A 25 25 0 0 1 50 0 A 25 25 0 0 1 75 20 V 50 H 90 V 100 H 10 V 50 H 75 M50 85 A 5 5 0 0 1 45 80 V 70 A 5 5 0 0 1 50 65 A 5 5 0 0 1 55 70 V 80 A 5 5 0 0 1 50 85">
                        </path>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-8 col-lg-6">
              <div class="field from-group">
                <%= f.label :métier %><br>
                  <div class="input-group">
                    <%= f.select(:profession, ['Chasseur de bien', 'Agent Immobilier', 'Notaire'], { :required => true }, { :class => 'custom-select' }) %>
                  </div>
                </div>
            </div>
          </div>
          <div class="custom-control custom-checkbox ">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :Se_souvenir_de_moi %>
              </div>
            <% end %>
          </div>
          <div class="col-md">
            <div class="text-center text-md-right">
              <div class="actions">
                <%= f.submit "S'inscrire", class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 col-lg-7">
        <small>
          <p class="text-center text-muted mt-5 mb-0">
            Déja inscrit ?
            <%= render "users/shared/links_log_in" %>
          </p>
        </small>
      </div>
    </div>
  </div>
</section>
