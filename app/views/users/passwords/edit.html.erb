<div class="bg-overlay bg-dark"></div>
<div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-left"></div>
<div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-right"></div>
  <div id="forgot_password">
    <div class="container">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="card">
          <div class="card-header text-center">
            <h3>Changement de mot de passe </h3>
          </div>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="row">
            <div class="col-md-4 ">      
              <div class="card-body">
                <%= f.label :password, "Nouveau mot de passe" %><br />
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: '6 caractÃ¨res minimum', id:"myInput" %>
                <input id="boxid" type="checkbox" onclick="myFunction()"><span for="boxid"> Voir</span>
              </div>
            </div>
            <div class="col-md-4 ">      
              <div class="card-body">
                <%= f.label :password_confirmation, "Confirmer" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-4" style="padding-top: 35px;">      
              <div class="card-body text-center">
                <%= f.submit "Modifier", class:"btn btn-primary btn-outline btn-sm" %>                
              </div>
            </div>
          </div>
          <div class="row">
            <div class="card-body text-center">
              <%= link_to "Retour", :back, class:"btn btn-secondary btn-outline btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
