<div class="bg-overlay bg-dark"></div>
<div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-left"></div>
<div class="bg-triangle bg-triangle-light bg-triangle-bottom bg-triangle-right"></div>
  <div id="forgot_password">
    <div class="container" style="height: 979px;max-height: 979px;">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="row">
          <div class="col" style="height: 979px;max-height: 979px;display: flex;justify-content: center;align-items: center;">
            <div class="card" style="width: 687px;">
              <div class="card-header text-center" style="padding-top: 41px;">
                <h3>Changement de mot de passe </h3>
              </div>
              <%= render "users/shared/error_messages", resource: resource %>
              <div class="card-body" style="padding-left: 5px;padding-bottom: 10px;">
                <div class="row" style="margin-left: 0px; margin-right: 0px; justify-content: space-around;padding-bottom: 21px;">
                  <div class="first-row">
                    <%= f.label :password, "Nouveau mot de passe" %><br />
                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: '6 caractÃ¨res minimum', id:"myInput", style: "height: 47px;" %>
                    <input id="boxid" type="checkbox" onclick="myFunction()"><span for="boxid"> Voir</span>
                  </div>
                  <div class ="row">
                    <div class="second-row">
                      <%= f.label :password_confirmation, "Confirmer" %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', style: "height: 47px;" %>
                    </div> 
                    <div class="col" style="padding-left: 0px;padding-right: 0px;height: 80px;display: flex; align-items: end;">               
                      <%= f.submit "Modifier", class:"btn btn-primary btn-outline btn-sm", style: "height: 47px;" %>
                    </div>
                  </div>
                </div>
                <div class="row" style="margin-left: 0px; margin-right: 0px">
                  <div class="col" style="padding: inherit;display: flex;margin-left: 15px;">
                    <%= link_to "Retour", :back, class:"btn btn-secondary btn-outline btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
